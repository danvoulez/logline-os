{
  "id": "grammar_pt_br_strict",
  "name": "Portuguese (BR) Strict Grammar",
  "version": "1.0.0",
  "frequencies": [
    {
      "id": "F_NET",
      "name": "Network Address",
      "description": "IP addresses, URLs, network identifiers",
      "regex": "^(?:[0-9]{1,3}\\.){3}[0-9]{1,3}$|^https?://|^[a-zA-Z0-9.-]+\\.[a-zA-Z]{2,}$",
      "preserve": true
    },
    {
      "id": "F_CODE",
      "name": "Code/Identifier",
      "description": "Code snippets, variable names, function names",
      "regex": "^[a-zA-Z_][a-zA-Z0-9_]*$|^[A-Z_]+$",
      "preserve": true
    },
    {
      "id": "F_KEY",
      "name": "Keyword",
      "description": "Dictionary-translatable words",
      "regex": "^[a-zA-ZáàâãéêíóôõúçÁÀÂÃÉÊÍÓÔÕÚÇ]+$"
    },
    {
      "id": "F_ADJ",
      "name": "Adjective",
      "description": "Adjectives (may need syntax reordering)",
      "regex": "^[a-zA-ZáàâãéêíóôõúçÁÀÂÃÉÊÍÓÔÕÚÇ]+$"
    },
    {
      "id": "F_NOUN",
      "name": "Noun",
      "description": "Nouns (may need syntax reordering)",
      "regex": "^[a-zA-ZáàâãéêíóôõúçÁÀÂÃÉÊÍÓÔÕÚÇ]+$"
    },
    {
      "id": "F_META",
      "name": "Meta Character",
      "description": "Punctuation, separators",
      "regex": "^[:;,\\.!?\\-]+$",
      "preserve": true
    },
    {
      "id": "F_VOID",
      "name": "Whitespace",
      "description": "Spaces, tabs, newlines",
      "regex": "^\\s+$",
      "preserve": true
    },
    {
      "id": "F_TEMP",
      "name": "Temporal",
      "description": "Dates, times",
      "regex": "^\\d{4}-\\d{2}-\\d{2}|\\d{2}/\\d{2}/\\d{4}|\\d{2}:\\d{2}:\\d{2}$"
    },
    {
      "id": "F_NUM",
      "name": "Number",
      "description": "Numeric values",
      "regex": "^\\d+(\\.\\d+)?$",
      "preserve": true
    }
  ],
  "patterns": [
    {
      "rule_id": "noun_adj_order",
      "trigger_pattern": ["F_NOUN", "F_VOID", "F_ADJ"],
      "operation": "identity",
      "description": "Portuguese uses noun-adjective order (no swap needed)"
    }
  ]
}

